<body>
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12">
        <h1>{{title}}</h1>
        <form id="addStudent" class="form-horizontal" type="get" action="/addNewStudent">
          <div class="form-group">
            <label class="control-label col-sm-2" for ="Name">NAME :</label>
            <div class=" col-sm-10">
              <input name="Name" type="text" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2 for="RollNo">Roll No :</label>
            <div class=" col-sm-10">
              <input name="RollNo" type="number" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2 for="Address"> Address :</label>
            <div class=" col-sm-10">
              <input name="Address" type="text" class="form-control" />
            </div>
          </div>
          <div class="col-md-3 col-md-offset-4">
          <button class="btn btn-primary"type="submit" class="button">Add Student</button>
          </div>
        </form>
      </div>
    </div>
    </div>


